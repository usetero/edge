{
  "policies": [
    {
      "name": "drop-debug-logs",
      "policy_type": "filter",
      "telemetry_types": ["logs"],
      "matchers": [
        { "path": "$.body", "regex": "debug" },
        { "path": "$.body", "regex": "trace" }
      ],
      "action": "drop"
    },
    {
      "name": "keep-error-logs",
      "policy_type": "filter",
      "telemetry_types": ["logs"],
      "matchers": [
        { "path": "$.severity_text", "regex": "error" },
        { "path": "$.severity_text", "regex": "critical" },
        { "path": "$.severity_text", "regex": "fatal" }
      ],
      "action": "keep"
    }
  ]
}
